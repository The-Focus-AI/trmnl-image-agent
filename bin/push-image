#!/bin/bash
# Push image to TRMNL displays
# Pushes to both Market and Home webhooks
# Uses environment variables, falls back to 1Password if not set

set -e

IMAGE_FILE="$1"

if [ -z "$IMAGE_FILE" ] || [ ! -f "$IMAGE_FILE" ]; then
  echo "Usage: push-image <image.png>" >&2
  echo "Error: Image file not found: $IMAGE_FILE" >&2
  exit 1
fi

# Verify file size
if [ "$(uname)" = "Darwin" ]; then
  SIZE=$(stat -f%z "$IMAGE_FILE")
else
  SIZE=$(stat -c%s "$IMAGE_FILE")
fi
SIZE_KB=$((SIZE / 1024))

if [ "$SIZE_KB" -gt 90 ]; then
  echo "Error: Image is ${SIZE_KB}KB, exceeds TRMNL 90KB limit" >&2
  exit 1
fi

echo "Pushing image to TRMNL displays..." >&2
echo "  Image: $IMAGE_FILE (${SIZE_KB}KB)" >&2

# Get Market webhook URL from env or 1Password
if [ -z "$TRMNL_WEBHOOK_URL" ]; then
  echo "  TRMNL_WEBHOOK_URL not in env, trying 1Password..." >&2
  if command -v op &> /dev/null; then
    TRMNL_WEBHOOK_URL=$(op read "op://Personal/Market TRMNL Webhook/notesPlain" 2>/dev/null) || true
  fi
  if [ -z "$TRMNL_WEBHOOK_URL" ]; then
    echo "Error: TRMNL_WEBHOOK_URL not set and 1Password lookup failed" >&2
    exit 1
  fi
fi

# Get Home webhook URL from env or 1Password
if [ -z "$TRMNL_HOME_WEBHOOK_URL" ]; then
  echo "  TRMNL_HOME_WEBHOOK_URL not in env, trying 1Password..." >&2
  if command -v op &> /dev/null; then
    TRMNL_HOME_WEBHOOK_URL=$(op read "op://Personal/Home TRMNL Webhook/notesPlain" 2>/dev/null) || true
  fi
fi

# Push to Market TRMNL
echo "  Pushing to Market TRMNL..." >&2
RESPONSE=$(curl -s -X POST \
  -H "Content-Type: image/png" \
  -H "Cache-Control: no-cache" \
  -H "X-Timestamp: $(date +%s)" \
  --data-binary "@$IMAGE_FILE" \
  "$TRMNL_WEBHOOK_URL")

if echo "$RESPONSE" | grep -q "successfully"; then
  echo "  ✓ Market TRMNL: Success" >&2
else
  echo "  ✗ Market TRMNL: $RESPONSE" >&2
fi

# Push to Home TRMNL (if URL is set)
if [ -n "$TRMNL_HOME_WEBHOOK_URL" ]; then
  echo "  Pushing to Home TRMNL..." >&2
  RESPONSE=$(curl -s -X POST \
    -H "Content-Type: image/png" \
    -H "Cache-Control: no-cache" \
    -H "X-Timestamp: $(date +%s)" \
    --data-binary "@$IMAGE_FILE" \
    "$TRMNL_HOME_WEBHOOK_URL")

  if echo "$RESPONSE" | grep -q "successfully"; then
    echo "  ✓ Home TRMNL: Success" >&2
  else
    echo "  ✗ Home TRMNL: $RESPONSE" >&2
  fi
else
  echo "  Skipping Home TRMNL (URL not available)" >&2
fi

echo "Done!" >&2
